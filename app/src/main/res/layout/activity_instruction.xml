<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00b8d4"
    tools:context="edu.uw.team5.huskymathchallenge.InstructionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Husky Math Challenge... There are 4 categories of math quiz. Each category has a time limit and 3 lives. Each correct answer is worth one point. The user can receive instant feedback of his/her answer. Final score will be saved, and the user can have the option to share the score."
        android:id="@+id/instructionText"
        android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="47dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/readbtn"
        android:id="@+id/readbtn"
        android:textColor="#e3f2fd"
        android:background="#1a237e"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e3f2fd"
        android:background="#1a237e"
        android:text="@string/stopreadingbtn"
        android:id="@+id/stopreadingbtn"
        android:layout_alignTop="@+id/readbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/instruction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
